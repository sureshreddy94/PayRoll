<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.krypto.blocks.payroll.JobCompletionReportActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_jobreport"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#1E88E5"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Code : 24345457"
        android:textSize="20dp"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SITE : NOHO"
        android:textSize="18dp"
        android:layout_margin="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job compeltion Repot, mile stone,Work Specifications"
        android:textSize="18dp"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="50dp"
        android:layout_weight="1"/>
        <ImageView
            android:id="@+id/send_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/send_btn"
            android:paddingTop="20dp"
            android:layout_weight="4"/>
    </LinearLayout>
</LinearLayout>
