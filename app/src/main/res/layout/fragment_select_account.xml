<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_frame"
    android:orientation="vertical"
    tools:context="com.krypto.blocks.payroll.fragments.SelectAccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_select_account"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#1E88E5"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">



    </android.support.v7.widget.Toolbar>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="5dp"
     android:text="Amount"
     android:textSize="22dp"
     android:layout_gravity="center"
     android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/curved_layout"
        android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:text=""
        android:id="@+id/amount"
        android:textSize="24dp"
        android:textColor="#1E88E5"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/edit"
            android:layout_weight="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spouse"
            android:paddingTop="10dp"
            android:layout_weight="2"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spouse"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account : 00123456"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routing : #PSPBIFF6"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mom"
            android:paddingTop="10dp"
            android:layout_weight="2"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mom"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account : 00123466"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routing : #PSPBIFJG"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/son"
            android:paddingTop="10dp"
            android:layout_weight="2"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account : 275473466"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routing : #BIFUNGJG"
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/send_btn"
        android:id="@+id/send_white"
        android:paddingTop="150dp"
        android:layout_marginLeft="350dp"/>



</LinearLayout>
